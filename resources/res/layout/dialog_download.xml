<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ff1e1e1e"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@+id/dl_game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Game Title"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ffbbbbbb"
            android:id="@+id/dl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Initializing..."/>
        <ProgressBar
            android:id="@+id/dl_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="12dp"
            android:progressDrawable="@drawable/custom_progress"
            style="?android:attr/progressBarStyleHorizontal"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffffff"
                android:id="@+id/dl_progress_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffaaaaaa"
                android:id="@+id/dl_speed_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB/s â€¢ --:--"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="12sp"
                android:textColor="#ffffffff"
                android:id="@+id/btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Background"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#ff333333"
                app:cornerRadius="18dp"/>
            <Button
                android:textSize="12sp"
                android:textColor="#ffff4444"
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Cancel"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="#ff333333"
                app:cornerRadius="18dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
