<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff121212"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Storage"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_marginBottom="32dp"
        android:letterSpacing="0.05"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ff252525"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:id="@+id/storage_usage_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Internal Storage"
                    android:textSize="16sp"
                    android:textColor="#ffaaaaaa"/>
                
                <TextView
                    android:id="@+id/storage_percent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ff00C853"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/storage_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:progressDrawable="@drawable/custom_progress_bg"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/storage_detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculating..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center"/>
                
            <TextView
                android:id="@+id/storage_free_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#ff888888"
                android:gravity="center"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Library"
        android:layout_marginTop="48dp"
        android:backgroundTint="#ff333333"
        android:textColor="#ffffffff"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:cornerRadius="24dp"/>

</LinearLayout>