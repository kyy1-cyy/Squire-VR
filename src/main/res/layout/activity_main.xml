<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:id="@+id/status_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Library"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.SwitchCompat
                android:textColor="#ffbbbbbb"
                android:id="@+id/auto_sideload_switch"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Auto-Install"/>
        </LinearLayout>
        <androidx.appcompat.widget.SearchView
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/search_bar"
            android:background="@drawable/search_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            app:iconifiedByDefault="false"
            app:queryHint="Search games..."/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/tab_all"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff007aff"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/tab_installed"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Installed"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff333333"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/tab_updates"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Updates"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff333333"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/tab_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Favorites (0)"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff333333"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/tab_uncrackable"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Uncrackable"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff333333"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/btn_storage_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Storage"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff444444"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textSize="12sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/btn_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Queue"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#ff333333"
                    app:cornerRadius="18dp"/>
                <Button
                    android:textColor="#ffffffff"
                    android:id="@+id/btn_sort"
                    android:background="@drawable/rounded_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:text="Sort"
                    app:backgroundTint="#ff333333"/>
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bg_status_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#ff252525"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:id="@+id/bg_status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Downloading..."
                        android:layout_weight="1"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/bg_loader"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:indeterminate="true"
                    android:progressTint="#ff007aff"
                    android:indeterminateTint="#ff007aff"
                    style="?android:attr/progressBarStyleHorizontal"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffaaaaaa"
                    android:id="@+id/bg_status_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Processing in background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_list"
            android:background="#ff1e1e1e"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/loader"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_gravity="bottom"
        android:id="@+id/dl_bg_status_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#ff252525"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:id="@+id/dl_bg_status_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Downloading..."
                    android:layout_weight="1"/>
                <Button
                    android:textSize="11sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/dl_bg_status_view_btn"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="VIEW"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="#ff3d3d3d"
                    app:cornerRadius="16dp"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/dl_bg_loader"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:indeterminate="true"
                android:progressTint="#ff007aff"
                android:indeterminateTint="#ff007aff"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffaaaaaa"
                android:id="@+id/dl_bg_status_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Processing in background"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/queue_notification"
        android:background="#cc000000"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:elevation="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:padding="8dp">
        <TextView
            android:text="Thanks Shall0m on discord for making the app icon"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Squire VR v2.3.0"
            android:textColor="#ff444444"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
