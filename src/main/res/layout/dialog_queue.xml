<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ff1e1e1e"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Download Queue"/>
            <TextView
                android:id="@+id/btn_x_close"
                android:textSize="18sp"
                android:textColor="#ffaaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="âœ•"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/queue_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:textColor="#ff888888"
            android:gravity="center"
            android:id="@+id/queue_empty_text"
            android:padding="24dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Queue is empty."/>
        <Button
            android:textColor="#ffffffff"
            android:id="@+id/btn_close_queue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Close"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#ff333333"
            app:cornerRadius="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
