<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="#ff252525"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <ImageView
                android:id="@+id/game_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:ellipsize="end"
                            android:id="@+id/game_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_toStartOf="@+id/game_favorite_star"
                            android:layout_marginEnd="4dp"/>
                        <ImageView
                            android:id="@+id/game_favorite_star"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_star_outline"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>
                        <ImageView
                            android:id="@+id/btn_uninstall"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="24dp"
                            android:src="@drawable/ic_delete_bin"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"
                            app:tint="#FF5252"/>
                    </RelativeLayout>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#ffaaaaaa"
                        android:id="@+id/game_meta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#ffaaaaaa"
                        android:id="@+id/game_popularity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Popularity: 0"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="#ff777777"
                        android:id="@+id/game_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/installed_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:text="Installed"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"
                    android:visibility="gone"/>
            </RelativeLayout>
            <Button
                android:textSize="12sp"
                android:textColor="#ffffffff"
                android:id="@+id/download_btn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="Download"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="#ff007aff"
                app:cornerRadius="18dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
