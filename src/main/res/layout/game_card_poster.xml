<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="#ff252525"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/game_thumb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="16:9"/>
        <ImageView
            android:id="@+id/gradient_overlay"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/poster_gradient"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/game_thumb"
            app:layout_constraintStart_toStartOf="@id/game_thumb"
            app:layout_constraintEnd_toEndOf="@id/game_thumb"/>
        
        <TextView
            android:id="@+id/game_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            app:layout_constraintTop_toBottomOf="@id/game_thumb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/game_favorite_star"/>

        <ImageView
            android:id="@+id/game_favorite_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/game_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"/>
            
        <TextView
            android:id="@+id/game_meta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#ffcccccc"
            app:layout_constraintTop_toBottomOf="@id/game_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/download_btn"/>

        <TextView
            android:id="@+id/game_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ff888888"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/game_meta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/download_btn"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/game_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ffaaaaaa"
            android:background="#99000000"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@id/game_thumb"
            app:layout_constraintStart_toStartOf="@id/game_thumb"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/installed_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Installed"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#00C853"
            android:background="#CC000000"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/game_thumb"
            app:layout_constraintEnd_toEndOf="@id/game_thumb"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/btn_uninstall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete_bin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:tint="#FF5252"
            app:layout_constraintTop_toTopOf="@id/game_favorite_star"
            app:layout_constraintEnd_toStartOf="@id/game_favorite_star"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/download_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Download"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="#ff007aff"
            app:cornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"/>
            
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
